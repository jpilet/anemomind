#!/bin/bash

# Before calling this script, ensure that a mongo server is running, e.g. by calling
#
#  sudo killall mongod
#  mkdir /tmp/anemodb
#  mongod --dbpath /tmp/anemodb
#
# or by doing
#
# mkdir www/db
# cd www2
# grunt serve:dev
#

set -e

SRC_DIR="@CMAKE_SOURCE_DIR@"
BIN_DIR="@CMAKE_BINARY_DIR@"

datasetsDir="${SRC_DIR}/datasets"
boats="AlinghiGC32 Irene psaros33_Banque_Sturdza"

# Insert (or get) test user

set +e
testUserId=$(mongo --quiet anemomind-dev --eval "print(db.users.find({email:'test@anemomind.com'})[0]._id + '')")
R=$?
set -e

if [ $R -ne 0 ]; then
  mongo --quiet anemomind-dev --eval "db.users.insert({name:'Test User','provider' : 'local', 'name' : 'test', 'email' : 'test@anemomind.com', 'hashedPassword' : 'bj0zHvlC/YIzEFOU7nKwr+OHEzSzfdFA9PMmsPGnWITGHp1zlL+29oa049o6FvuR2ofd8wOx2nBc5e2n2FIIsg==', 'salt' : 'bGwuseqg/L/do6vLH2sPVA==', 'role' : 'user' });"
  testUserId=$(mongo --quiet anemomind-dev --eval "print(db.users.find({email:'test@anemomind.com'})[0]._id + '')")
fi

mongo --quiet anemomind-dev --eval "db.users.insert({name:'Test Admin','provider' : 'local', 'name' : 'test admin', 'email' : 'admin@anemomind.com', 'hashedPassword' : 'bj0zHvlC/YIzEFOU7nKwr+OHEzSzfdFA9PMmsPGnWITGHp1zlL+29oa049o6FvuR2ofd8wOx2nBc5e2n2FIIsg==', 'salt' : 'bGwuseqg/L/do6vLH2sPVA==', 'role' : 'admin' });" || true

adminUserId=$(mongo --quiet anemomind-dev --eval "print(db.users.find({email:'admin@anemomind.com'})[0]._id + '')")

for i in ${boats}; do
  echo Searching boat: $i
  set +e
  boatid=$(mongo --quiet anemomind-dev --eval "print(db.boats.find({name:'${i}'})[0]._id + '')")
  R=$?
  set -e
  if [ $R -ne 0 ]; then
    mongo --quiet anemomind-dev --eval "db.boats.insert({name:'${i}','admins' : [ObjectId('${testUserId}')]})"
    boatid=$(mongo --quiet anemomind-dev --eval "print(db.boats.find({name:'${i}'})[0]._id + '')")
  fi

  if test -d "${datasetsDir}/$i/logs"; then
    boatdir="${datasetsDir}/$i/logs"
  else
    boatdir="${datasetsDir}/$i"
  fi

  test -d "${boatdir}/processed" || mkdir "${boatdir}/processed"

  echo "Processing boat log for ${i} (id ${boatid})"
  "${BIN_DIR}/src/server/nautical/nautical_processBoatLogs" \
    --boatid "${boatid}" \
    --dir "${boatdir}" \
    --dst "${boatdir}/processed" \
    --clean \
    -t \
    || true

  "${BIN_DIR}/src/server/nautical/nautical_catTargetSpeed" --id "${boatid}" "${boatdir}/processed/boat.dat" | mongo anemomind-dev

done
